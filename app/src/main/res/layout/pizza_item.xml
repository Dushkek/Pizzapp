<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imagePizzaFragment"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:contentDescription="@string/pizza_image" />

    <TextView
        android:id="@+id/pizzaName"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_alignTop="@id/imagePizzaFragment"
        android:layout_toEndOf="@+id/imagePizzaFragment"
        />

    <TextView
        android:id="@+id/pizzaIngredients"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/imagePizzaFragment"
        android:layout_alignStart="@id/pizzaName"
        android:layout_alignTop="@id/pizzaName"
        />

    <TextView
        android:id="@+id/pizzaPrice"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/pizzaIngredients"
        android:layout_alignTop="@id/pizzaIngredients"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/imagePizzaFragment"
        android:textAlignment="textEnd"/>

</RelativeLayout>